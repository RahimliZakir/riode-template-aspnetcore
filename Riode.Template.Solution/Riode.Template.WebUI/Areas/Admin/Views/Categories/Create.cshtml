@model Riode.Template.WebUI.Models.Entity.Category

@{
    ViewData["Title"] = "Create";
}

@section css{
    <link rel="stylesheet" href="libraries/select2/css/select2.min.css" />
    @*<style>
        .select2-container--default .select2-selection--single .select2-selection__rendered {
            b
        }
    </style>*@
}

<form method="post" asp-action="Create">
    <div class="form-group">
        <label asp-for="ParentId" class="control-label"></label>
        <select asp-for="ParentId" class="form-control select2" asp-items="ViewBag.ParentId">
            <option value="" selected disabled>---Seçilməyib---</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="label-required"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
    </div>
    <a asp-action="Index" class="btn btn-danger">Geriyə</a>
    <button class="btn btn-info" type="submit">Əlavə et</button>
</form>

@section scripts{
    <script src="libraries/jquery-validate/jquery.validate.min.js"></script>
    <script src="libraries/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="libraries/select2/js/select2.full.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.select2').select2();
        });
    </script>
}