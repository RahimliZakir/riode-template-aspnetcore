@model Riode.Template.WebUI.Models.Entity.Product

@{
    ViewData["Title"] = "Create";
}

@section css{
    <link rel="stylesheet" href="libraries/multiple-image/css/imager.css" />
    <link rel="stylesheet" href="libraries/select2/css/select2.min.css" />
    <link rel="stylesheet" href="libraries/select2/css/select2.override.css" />
}

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="row align-items-center">
        <div class="col-6">
            <div class="form-group">
                <label asp-for="BrandId" class="control-label"></label>
                <select asp-for="BrandId" class="form-control select2">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="StockKeepingUnit" class="label-required"></label>
                <input asp-for="StockKeepingUnit" class="form-control" />
                <span asp-validation-for="StockKeepingUnit"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="label-required"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="col-6">
            <div style="width: 600px;" class="imager-container" id="viewer1" name="files">
            </div>
            <div class="form-group">
                <label asp-for="ShortDescription"></label>
                <input asp-for="ShortDescription" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
            </div>
        </div>
    </div>
    <a asp-action="Index" class="btn btn-danger">Geriyə</a>
    <button class="btn btn-info" type="submit">Əlavə et</button>
</form>

@section scripts{
    <script src="libraries/multiple-image/js/jquery.image-input.js"></script>
    <script src="libraries/multiple-image/js/imager.js"></script>
    <script src="libraries/jquery-validate/jquery.validate.min.js"></script>
    <script src="libraries/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="libraries/select2/js/select2.full.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.select2').select2();

            $('#viewer1').imgadd({
                tnWidth: '120px',
                tnHeight: '120px',
                fontSize: '55px',
                plusInnerHtml: '',
                plusBtnClass: undefined
            });
        });
    </script>
}